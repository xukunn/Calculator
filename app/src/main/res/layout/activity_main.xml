<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xukunn.calculator.widget.LastInputEditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:singleLine="true" />

    <com.xukunn.calculator.widget.LastInputEditText
        android:id="@+id/et_expression"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="right"
        android:hint="0.00"
        android:maxLines="4" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:background="#fff"
        android:hint="0.00"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv7"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7" />
        <TextView
            android:id="@+id/tv8"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8" />
        <TextView
            android:id="@+id/tv9"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9" />
        <TextView
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="删除" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv4"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4" />
        <TextView
            android:id="@+id/tv5"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5" />
        <TextView
            android:id="@+id/tv6"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6" />
        <TextView
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1" />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2" />
        <TextView
            android:id="@+id/tv3"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3" />
        <TextView
            android:id="@+id/calculate"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="=" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv0"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0" />
        <TextView
            android:id="@+id/tv00"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="00" />
        <TextView
            android:id="@+id/tvPoint"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="." />
        <TextView
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="visible"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-" />
        <TextView
            android:id="@+id/divide"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="÷" />
        <TextView
            android:id="@+id/multi"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="×" />

        <TextView
            android:id="@+id/reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="C"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>